<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN"
    "http://struts.apache.org/dtds/struts-config_1_2.dtd">
<struts-config>
	<form-beans>
		<form-bean name="alunoForm" type="br.unb.controller.struts.AlunoForm" />
		<form-bean name="disciplinaForm" type="br.unb.controller.struts.DisciplinaForm" />
		<form-bean name="professorForm" type="br.unb.controller.struts.ProfessorForm" />
	</form-beans>
	<action-mappings>
		<action path="/aluno" name="alunoForm"
			type="br.unb.controller.struts.AlunoAction" scope="request" validate="true">
			<forward name="success" path="/aluno.jsp" />
		</action>
		<action path="/disciplina" name="disciplinaForm"
			type="br.unb.controller.struts.DisciplinaAction" scope="request" validate="true">
			<forward name="success" path="/disciplina.jsp" />
		</action>
		<action path="/professor" name="professorForm"
			type="br.unb.controller.struts.ProfessorAction" scope="request" validate="true">
			<forward name="success" path="/professor.jsp" />
		</action>
	</action-mappings>
	<message-resources parameter="ApplicationResources" />
</struts-config>